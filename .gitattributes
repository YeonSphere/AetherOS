# Desktop OS Specific Files
*.iso filter=lfs diff=lfs merge=lfs -text
*.acpi filter=lfs diff=lfs merge=lfs -text
*.uefi filter=lfs diff=lfs merge=lfs -text

# Kernel and System Files
*.ko filter=lfs diff=lfs merge=lfs -text
*.o filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
*.img filter=lfs diff=lfs merge=lfs -text
*.sys filter=lfs diff=lfs merge=lfs -text

# Firmware and Drivers
*.fw filter=lfs diff=lfs merge=lfs -text
*.ucode filter=lfs diff=lfs merge=lfs -text
*.deb filter=lfs diff=lfs merge=lfs -text

# Boot Requirements
*.efi filter=lfs diff=lfs merge=lfs -text
*.initrd filter=lfs diff=lfs merge=lfs -text

# Desktop Resources
*.ttf filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.svg filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text